@model EmployeeManagementSystem.ViewModels.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container py-3">
    <h2>Employee Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.EmailAddress</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Active</dt>
        <dd class="col-sm-9">
            @(Model.IsActive ? "Yes" : "No")
        </dd>

        <dt class="col-sm-3">Joined Date</dt>
        <dd class="col-sm-9">@Model.JoinedDate.ToShortDateString()</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-warning me-1">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.EmployeeID" class="btn btn-danger me-1">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
