@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container py-3">
    <h2 class="mb-3 text-primary">Employee Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-semibold">Full Name</dt>
        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-3 fw-semibold">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3 fw-semibold">Active Employee</dt>
        <dd class="col-sm-9">
            @(
                        Model.IsActive ? "Yes" : "No"
                        )
        </dd>

        <dt class="col-sm-3 fw-semibold">Email</dt>
        <dd class="col-sm-9">@Model.EmailAddress</dd>

        <dt class="col-sm-3 fw-semibold">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3 fw-semibold">Joined Date</dt>
        <dd class="col-sm-9">@Model.JoinedDate.ToString("dd MMM yyyy hh:mm tt")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.EmployeeID" class="btn btn-primary me-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
