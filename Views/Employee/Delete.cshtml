@model EmployeeManagementSystem.ViewModels.EmployeeDeleteViewModel

<div class="container py-3">
    <h2 class="text-danger mb-3">Delete Employee</h2>

    <dl class="row mt-3">
        <dt class="col-sm-3 fw-semibold">Full Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>
        <dt class="col-sm-3 fw-semibold">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>
        <dt class="col-sm-3 fw-semibold">Email</dt>
        <dd class="col-sm-9">@Model.EmailAddress</dd>
        <dt class="col-sm-3 fw-semibold">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>
        <dt class="col-sm-3 fw-semibold">Joined Date</dt>
        <dd class="col-sm-9">@Model.JoinedDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-3 fw-semibold">Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="EmployeeID" />
        <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
