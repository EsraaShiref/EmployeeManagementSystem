@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container py-3">
    <h2 class="text-danger mb-3">Delete Employee</h2>
    <hr />

    <h5>Are you sure you want to delete this Employee?</h5>

    <dl class="row mt-3">
        <dt class="col-sm-3 fw-semibold">Full Name</dt>
        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-3 fw-semibold">Email</dt>
        <dd class="col-sm-9">@Model.EmailAddress</dd>

        <dt class="col-sm-3 fw-semibold">Department</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3 fw-semibold">Active Employee</dt>
        <dd class="col-sm-9">
            @(
                        Model.IsActive ? "Yes" : "No"
                        )
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="EmployeeID" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>
