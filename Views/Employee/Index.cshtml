@model EmployeeManagementSystem.ViewModels.EmployeeListViewModel
@using EmployeeManagementSystem.Models

@{
    ViewData["Title"] = "Employees";
    var currentSort = ViewData["CurrentSort"]?.ToString() ?? "";
    var currentFilter = ViewData["CurrentFilter"]?.ToString() ?? "";
    var currentDepartment = ViewData["CurrentDepartment"]?.ToString() ?? "";
    var currentIsActive = ViewData["CurrentIsActive"]?.ToString() ?? "";
}

<div class="container pt-0 pb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Employees</h2>
        <a asp-action="Create" class="btn btn-success">Create New Employee</a>
    </div>

    <form class="row g-2 mb-3" method="get">
        <div class="col-md-4">
            <input type="text" name="searchString" value="@currentFilter" class="form-control" placeholder="Search by name or email..." />
        </div>

        <div class="col-md-2">
            <select name="department" class="form-select">
                <option value="">All Departments</option>
                @foreach (var d in Enum.GetValues(typeof(Employee.DepartmentEnum)))
                {
                    var dv = d.ToString();
                    if (dv == currentDepartment)
                    {
                        <option value="@dv" selected>@dv</option>
                    }
                    else
                    {
                        <option value="@dv">@dv</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-2">
            <select name="isActive" class="form-select">
                <option value="">All</option>
                @if (currentIsActive == "True")
                {
                    <option value="true" selected>Active</option>
                    <option value="false">Inactive</option>
                }
                else if (currentIsActive == "False")
                {
                    <option value="true">Active</option>
                    <option value="false" selected>Inactive</option>
                }
                else
                {
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                }
            </select>
        </div>

        

        <div class="col-md-2 d-flex align-items-end gap-2">
            <button class="btn btn-primary w-100" type="submit">Filter</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Reset</a>
        </div>

    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@await Html.PartialAsync("_SortableColumn", ("Full Name", "name", Model.CurrentSort, Model.CurrentFilter))</th>
                <th>@await Html.PartialAsync("_SortableColumn", ("Department", "department", Model.CurrentSort, Model.CurrentFilter))</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Active</th>
                <th>Joined Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Employees.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">No employees found.</td>
                </tr>
            }
            else
            {
                foreach (var e in Model.Employees)
                {
                    <tr>
                        <td>@e.FullName</td>
                        <td>@e.Department</td>
                        <td>@e.EmailAddress</td>
                        <td>@e.Phone</td>
                        <td>@(e.IsActive ? "Yes" : "No")</td>
                        <td>@e.JoinedDate.ToString("yyyy-MM-dd")</td>
                        <td class="d-flex gap-1">
                            <a asp-action="Details" asp-route-id="@e.EmployeeID" class="btn btn-info btn-sm flex-grow-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@e.EmployeeID" class="btn btn-warning btn-sm flex-grow-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@e.EmployeeID" class="btn btn-danger btn-sm flex-grow-1">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @await Html.PartialAsync("_Pagination", Model)
</div>
