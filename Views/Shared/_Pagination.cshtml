@{
    var tuple = (dynamic)Model;
    int currentPage = tuple.Item1;
    int totalPages = tuple.Item2;

    var query = Context.Request.Query;
    var currentFilter = query.ContainsKey("searchString") ? query["searchString"].ToString() : "";
    var currentSort = query.ContainsKey("sortOrder") ? query["sortOrder"].ToString() : "";
}

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage - 1)"
                   asp-route-searchString="@currentFilter"
                   asp-route-sortOrder="@currentSort"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int p = 1; p <= totalPages; p++)
            {
                var active = p == currentPage ? "active" : "";
                <li class="page-item @active">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@p"
                       asp-route-searchString="@currentFilter"
                       asp-route-sortOrder="@currentSort">@p</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(currentPage + 1)"
                   asp-route-searchString="@currentFilter"
                   asp-route-sortOrder="@currentSort"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}
