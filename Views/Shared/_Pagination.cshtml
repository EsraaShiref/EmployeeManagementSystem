@model EmployeeManagementSystem.ViewModels.EmployeeListViewModel

<nav aria-label="Page navigation" class="mt-3">
    <ul class="pagination justify-content-end">
        @{
            var prevDisabled = Model.CurrentPage <= 1 ? "disabled" : "";
            var nextDisabled = Model.CurrentPage >= Model.TotalPages ? "disabled" : "";
        }
        <li class="page-item @prevDisabled">
            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Previous">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var active = i == Model.CurrentPage ? "active" : "";
            <li class="page-item @active">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item @nextDisabled">
            <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Next">Next</a>
        </li>
    </ul>
</nav>
